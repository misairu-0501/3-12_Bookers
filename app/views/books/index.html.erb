<body>
  <p class="flash-message"><%= notice %></p>

  <h1 class="heading">Books</h1>

  <table>
    <tr>
      <!--コメントアウトはidで昇順になっているかの確認用-->
      <!--<th>id</th> -->
      <th class="table-heading">Title</th>
      <th class="table-heading">Body</th>
    </tr>

    <% @books.each do |book| %>
      <tr>
        <!--コメントアウトはidで昇順になっているかの確認用-->
        <!--<td><%= book.id %></td> -->
        <td class="table-element"><%= book.title %></td>
        <td class="table-element"><%= book.body %></td>
        <td class="table-element"><%= link_to "Show" , book_path(book.id) %></td>
        <td class="table-element"><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class="table-element"><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
  </table>

  <h2 class="sub-heading">New book</h2>

  <% if @book.errors.any? %>
    <div class="error-frame">
      <div class="error-title"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <%= form_with model: @book, url: index_path, method: :post, local: true do |f| %>
   <div class="input-box">
    <div>Title</div>
    <%= f.text_field :title %>
   </div>

   <div class="input-box">
     <div>Body</div>
      <%= f.text_area :body %>
   </div>

   <div class="input-box">
      <%= f.submit "Create Book" %>
   </div>
  <% end %>
</body>




